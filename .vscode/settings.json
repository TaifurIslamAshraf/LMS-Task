{
  "tailwindCSS.experimental.configFile": "packages/ui/src/styles/globals.css",

  // Editor formatting settings
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSaveMode": "file",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,

  // Code actions on save
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll": "explicit"
  },

  // File associations for proper formatting
  "files.associations": {
    "*.ejs": "html",
    "*.json": "jsonc",
    ".eslintrc": "jsonc",
    ".prettierrc": "jsonc"
  },

  // Prettier specific settings
  "prettier.requireConfig": false,
  "prettier.useEditorConfig": true,
  "prettier.configPath": "",
  "prettier.prettierPath": "",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  // ESLint settings
  "eslint.format.enable": true,
  "eslint.workingDirectories": ["."],

  // Disable conflicting formatters
  "typescript.format.enable": false,
  "javascript.format.enable": false,
  "json.format.enable": false,

  // Additional workspace settings
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",

  // Language specific formatters
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "cSpell.words": ["changable"]
}
